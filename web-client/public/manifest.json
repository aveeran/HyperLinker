{
    "name": "HyperLinker",
    "version": "0.0.0.1",
    "manifest_version": 3,
    "description": "An extension to play the Wikipedia Game with customizations",
    "permissions": ["declarativeContent", "tabs", "storage", "activeTab", "webNavigation", "history", "scripting"],
    "host_permissions": [
        "https://*.wikipedia.org/wiki/*",
        "https://*.wikipedia.org/w/*"
    ],
    "icons": { 
        "128" : "assets/WG_transparent.png"
    },
    "action": {
        "default_popup":"index.html"
    },
    "background" : {
        "service_worker": "background.js",
        "type": "module"
    },
    "content_scripts" : [
        {
            "matches": ["https://*.wikipedia.org/wiki/*", "https://*.wikipedia.org/w/*"],
            "js" : ["content.js"]
        }
    ]
}